{
    "openapi": "3.0.0",
    "info": {
        "version": "1.0.0",
        "title": "MORDigital Data API",
        "description": "The API defined by the MORDigital application"
    },
    "servers": [
        {
            "url": "/exist/apps/mordigital-data",
            "description": "Relative URL using the current host and port"
        }
    ],
    "tags": [
        {
			"name": "auth",
			"description": "Authenticate, login or logout database user"
		},
		{
			"name": "files",
			"description": "File up- and downloads of various kinds"
		},
		{
			"name": "query",
			"description": "Route specifies query parameters"
		}
	],
    "security": [
        {
            "cookieAuth": []
        },
        {
            "basicAuth": []
        }
    ],
    "components": {
        "securitySchemes": {
            "basicAuth": {
                "type": "http",
                "scheme": "basic"
            },
            "cookieAuth": {
                "type": "apiKey",
                "name": "mordigital.fcsh.unl.pt.login",
                "in": "cookie"
            }
        }
    },
    "paths": {
        "/api/logout": {
            "get": {
                "summary": "User Logout",
                "description": "End session of the current user",
                "operationId": "auth:logout",
                "tags": ["auth"],
                "parameters": [
                    {
                        "name": "logout",
                        "in": "query",
                        "description": "Set to some value to log out the current user",
                        "schema": {
                            "type": "string"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "OK",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "success": { "type": "boolean" }
                                    }
                                }
                            }
                        }
                    },
                    "301": {
                        "description": "Redirect with the logout parameter set.",
                        "content": {
                            "text/plain": {
                                "schema": {
                                    "type": "string"
                                }
                            }
                        }
                    },
                    "401": { "description": "unauthorized" }
                }
            }
        },
        "/api/login": {
            "post": {
                "summary": "User Login",
                "description": "Start an authenticated session for the given user",
                "tags": ["auth"],
                "operationId": "auth:login",
                "requestBody": {
                    "required": true,
                    "content": {
                        "multipart/form-data": {
                            "schema": {
                                "type": "object",
                                "required": [ "user" ],
                                "properties": {
                                    "user": {
                                        "description": "Name of the user",
                                        "type": "string"
                                    },
                                    "password": {
                                        "type": "string",
                                        "format": "password"
                                    }
                                }
                            }
                        },
                        "application/x-www-form-urlencoded": {
                            "schema": {
                                "type": "object",
                                "required": [ "user" ],
                                "properties": {
                                    "user": {
                                        "description": "Name of the user",
                                        "type": "string"
                                    },
                                    "password": {
                                        "type": "string",
                                        "format": "password"
                                    }
                                }
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "OK",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "user": { "type": "string" },
                                        "groups": {
                                            "type": "array",
                                            "items": { "type": "string" }
                                        },
                                        "dba": { "type": "boolean" },
                                        "domain": { "type": "string" }
                                    }
                                }
                            }
                        }
                    },
                    "401": {
                        "description": "Wrong user or password"
                    }
                },
                "security": [{ "cookieAuth": [] }]
            }
        },
        "/api/clean/{collection}" : {
            "delete" : {
                "summary": "Cleans specified collection.",
                "description": "Removes all content of the collection including collection itself.",
                "operationId":  "upld:clean",
                "x-constraints": {
					"groups": ["tei"]
				},
                "tags": ["files"],
                "parameters": [
                    {
                        "name": "collection",
                        "in": "path",
                        "required": true,
                        "schema":{ "type": "string" }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Colection deleted",
                        "content": {
                            "application/xml": {
                                "schema": { "type": "string" }
                            }
                        }
                    },
                    "400": {
                        "description": "Content was invalid",
                        "content": {
                            "application/xml": {
                                "schema": { "type": "string" }
                            }
                        }
                    }
                }
            }
        },
        "/api/upload/{collection}": {
            "post": {
                "summary": "Upload a single file (zip, xconf, or xml) to a collection.",
                "description": "The collection path is part of the URL.",
                "operationId": "upld:upload",
                "x-constraints": {
					"groups": ["tei", "dba"]
				},
                "tags": ["files"],
                "requestBody": {
                    "required": true,
                    "content": {
                        "multipart/form-data": {
                            "schema": {
                                "type": "object",
                                "required": ["file"],
                                "properties": {
                                    "file": {
                                        "type": "string",
                                        "format": "binary"
                                    }
                                }
                            }
                        }
                    }
                },
                "parameters": [
                    {
                        "name": "collection",
                        "in": "path",
                        "required": true,
                        "schema":{ "type": "string" }
                    }
                ],
                "responses": {
                    "201": {
                        "description": "Created uploaded file",
                        "content": {
                            "application/xml": {
                                "schema": { "type": "string" }
                            }
                        }
                    },
                    "400": {
                        "description": "Content was invalid",
                        "content": {
                            "application/xml": {
                                "schema": { "type": "string" }
                            }
                        }
                    }
                }
            }
        },
        "/api/report/{collection}" : {
            "get": {
                "summary": "Report of the index values in the collection",
                "description": "Shows values for each index defined for the collection.",
                "operationId": "upld:report",
                "x-constraints": {
					"groups": ["tei"]
				},
                "tags": ["query"],
                "parameters": [
                    {
                        "name": "collection",
                        "in": "path",
                        "description": "Collection for which the report will be generated",
                        "required": true,
                        "schema":{ "type": "string" }
                    },
                    {
                        "name": "count",
                        "in": "query",
                        "description": "Maximum values generated for particular index.",
                        "schema": {
                            "type": "integer",
                            "default": 20
                        }
                    },
                    {
                        "name": "item",
                        "in": "query",
                        "description": "Id of the object for which the report will be generated.",
                        "schema": {
                            "type": "string"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "OK",
                        "content": {
                            "application/xml": {
                                "schema": {
                                    "type": "string"
                                }
                            }
                        }
                    },
                    "401": { "description": "unauthorized" }
                }
            }
        }
    }
}
